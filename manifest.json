{
  "manifest_version": 2,

  "name": "Extension Toggle",
  "description": "A minimal framework for toggleextensions",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  
  "browser_action": {
    "default_title": "Toggle extension",
    "default_icon": {
      "16": "icons/disabled-16.png",
      "32": "icons/disabled-32.png",
      "48": "icons/disabled-48.png"
    }
  },

  "permissions": [
    "activeTab"
  ]
}
